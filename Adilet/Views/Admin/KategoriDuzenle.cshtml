@model Adilet.ViewModel.KategoriModel
@{
    ViewBag.Title = "KategoriDuzenle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h2>Kategori Düzenle</h2><hr />
        @using (Html.BeginForm("KategoriDuzenle", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m=>m.KategoriId)
            @Html.LabelFor(m => m.KategoriAdi)
            @Html.TextBoxFor(m => m.KategoriAdi, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.KategoriAdi, null, new { @class = "text-danger" })
            <br />
            <input type="submit" value="Kaydet" class="btn btn-success" />
            <br />
            if (ViewBag.hata != null)
            {

                <div class="alert alert-danger">@ViewBag.hata</div>
            }
            if (ViewBag.sonuc != null)
            {
                <div class="alert alert-success">@ViewBag.sonuc</div>
            }

        }
    </div>
</div>


