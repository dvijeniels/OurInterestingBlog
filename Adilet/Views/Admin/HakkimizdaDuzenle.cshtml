@model Adilet.ViewModel.HakkimizdaModel
@{
    ViewBag.Title = "HakkimizdaDuzenle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h2>Hakkımızda sayfası düzenle</h2><hr />
        @using (Html.BeginForm("HakkimizdaDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.LabelFor(m => m.MetinIcerik)
            @Html.TextAreaFor(m => m.MetinIcerik, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MetinIcerik, null, new { @class = "text-danger" })
            <br />
            @Html.LabelFor(m => m.Resim)
            @Html.TextBoxFor(m => m.Resim, new { type = "file", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Resim, null, new { @class = "text-danger" })
            <br />
            <div class="text-center">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
            if (ViewBag.hata != null)
            {
                <div class="alert alert-danger">@ViewBag.hata</div>
            }
            if (ViewBag.sonuc != null)
            {
                <div class="alert alert-success">@ViewBag.sonuc</div>
            }
        }
        <div class="text-center">
            <a class="btn btn-success" href="~/Admin/Hakkimizda">Vazgeç</a>
        </div>
    </div>
</div>
@section scripts{
    <script>
        CKEDITOR.replace("MetinIcerik");
    </script>
     }
